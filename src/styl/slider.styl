.slider
    width: 100%
    height: 650px
    position: relative
    transition: 1s
    overflow hidden
    @media (max-width:770px)
        height 530px
    @media(max-width:640px)
        height: 500px
    .row
        position: relative
        max-width: 1400px
        height 100%
        margin: 0 auto
        .slider-item
            position: absolute
            background: url(../img/slider1.png) no-repeat
            background-position: center
            background-size: auto
            width: 100%
            height: 100%
            text-transform: uppercase
            display: flex
            justify-content: center
            align-items: center
            transition: 1s all
            @media(max-width:770px)
                background-position: left
                background-size: cover;
            @media(max-width:640px)
                background-position: -450px
            .text-wrap
                position: absolute
                top: 280px
                left: 380px
                max-width: 500px
                @media (max-width: 770px)
                    top: 145px
                    left: 146px
                    padding: 0
                    font-size: 60px
                @media(max-width:640px)
                    top: 130px
                    left: 0
                    width: 100%
                    align-items: center;
                    display: flex;
                    flex-direction: column;
                p
                    font-family: $font
                    font-size: 80px
                    margin: 0
                    @media (max-width: 600px)
                        font-size: 50px
                        text-align: center
                button
                    float: right
                    font-size: 14px
                    background: $color1
                    color: $color2
                    padding: 18px 80px
                    text-transform: uppercase
                    margin-top: 30px
                    border: none
                    &:hover
                        box-shadow: 0px 0px 25px -2px rgba(0,0,0,0.75)
                    @media (max-width: 770px)
                        float left
                    @media(max-width:640px)
                        padding: 20px 100px
            &:nth-child(2)
                background: url(../img/slider3.png) no-repeat
                background-size: cover
                background-position: top center
                color: $color2
                opacity:0
                z-index: -1
                .text-wrap
                    top: 210px
                    left: 468px
                    font-weight: bold
                    margin-top: 0
                    @media (max-width: 770px)
                        top: 145px
                        left: 146px
                        text-align: left
                        font-size: 60px
                    @media(max-width:640px)
                        left: 0
                        top: 130px
                @media (max-width: 770px)
                    background-size: cover;
                @media(max-width:640px)
                    background-position: right 

