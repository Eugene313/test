.slider
    width: 100%
    height: 900px
    position: relative
    transition: 1s
    z-index 10
    @media (max-width:500px)
        height 500px
    .slider-item
        position: absolute
        background: url(../img/slider1.png) no-repeat
        background-size: cover
        background-position: center center
        width: 100%
        height: 100%
        text-transform: uppercase
        display: flex
        justify-content: center
        align-items: center
        transition: 1s all
        .text-wrap
            max-width: 500px
            padding-right: 20%
            @media (max-width: 600px)
                padding: 0
            p
                font-family: $font
                font-size: 80px
                margin: 0
                @media (max-width: 600px)
                    font-size: 50px
                    text-align: center
            button
                float: right
                background: #000000
                color: #ffffff
                padding: 15px 30px
                text-transform: uppercase
                margin-top: 30px
                border: none
                &:hover
                    box-shadow: 0px 0px 25px -2px rgba(0,0,0,0.75)
        &:nth-child(2)
            background: url(../img/slider3.png) no-repeat
            background-size: cover
            background-position: center center
            color: #ffffff
            opacity:0
            z-index: -1
            .text-wrap
                margin-top: 0
                margin-left: 20%
                @media (max-width: 750px)
                    text-align: center
            @media (max-width: 750px)
                background-position: right

