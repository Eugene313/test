footer
    background: #000000
    width 100%
    height: 400px
    padding: 0 15px
    .row
        max-width 960px
        margin: 0 auto
        display: flex
        justify-content: space-between
        flex-wrap: wrap
        color: #ffffff
        @media (max-width: 400px)
            padding: 1px 15px
            p
                text-align: center
                width: 100%
        .footer-col
            display: flex
            flex-direction: column
            h2
                text-transform: uppercase
                color:#ffffff
                font-size: 17px
                padding: 50px 0 20px
            a
                color: #b7b7b7
                text-decoration: none
                padding: 10px 0
                font-size: 14px
                &:hover
                    color: #028aff
            form
                display: flex
                width: 220px;
                input
                    width: 100%
                    padding: 10px
                    font-size: 14px;
                    color: #b0b0b0
                button
                    background: #c7c7c7
                    border: none
                    text-transform: uppercase
                    padding: 10px 20px
                    font-size: 18px
            .social
                display: flex
                width: 100%
                justify-content: space-between
                padding: 80px 0
                font-size: 22px
                i
                    transition: 0.5s
                    cursor: pointer
                    &:hover
                        transform: rotateZ(45deg)
                        color: #028aff

