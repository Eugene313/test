footer
    background: #000000
    width 100%
    .row
        max-width 1200px
        margin: 0 auto
        display: flex
        justify-content: space-between
        flex-wrap: wrap
        padding: 50px 15px
        color: #ffffff
        @media (max-width: 400px)
            padding: 1px 15px
            p
                text-align: center
                width: 100%
        .footer-col
            display: flex
            flex-direction: column
            h2
                text-transform: uppercase
                color:#ffffff
                font-size: 17px
            a
                color: #b7b7b7
                text-decoration: none
                padding: 10px 0
                font-size: 14px
            form
                display: flex
                input
                    padding: 10px
                button
                    background: #c7c7c7
                    border: none
                    text-transform: uppercase
                    padding: 10px 20px
                    font-size: 18px
            .social
                display: flex
                width: 100%
                justify-content: space-between
                padding: 80px 0
                font-size: 22px

