.features
    width: 100%
    height 100%
    display: flex
    flex-direction: column
    align-items: center
    padding: 100px 0
    h2
        text-transform: uppercase
        font-size: 48px
    .time
        position relative
        padding: 10px 0
        margin-bottom: 100px
        display: flex;
        justify-content: center;
        span
            position: absolute
            content: ''
            background: #000000
            padding: 1px 20px
            display: inline-block
            transform: rotateZ(-45deg)
            &:nth-child(2)
                transform: rotateZ(45deg)
    .row
        display: flex
        justify-content: space-between
        flex-wrap: wrap
        width: 100%
        max-width 1200px
        @media (max-width:500px)
            justify-content: center
        .features-item
            max-width 250px
            justify-content: center
            display: flex
            flex-direction: column
            text-align: center
            align-items: center